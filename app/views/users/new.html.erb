<div class="text-center">
  <p class="mt-2">アカウント登録</p>
  <div class="row">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.text_field :name, class: 'col-6 form-control text-field',placeholder: "名前" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control text-field',placeholder: "Eメールアドレス" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control text-field',placeholder: "パスワード" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 
        'form-control text-field',placeholder: "パスワード (確認用)" %>
      </div>

      <div class="form-group">
        <%= f.submit "アカウント登録", class: 'btn btn-lg btn-primary form-control'%>
      </div>

    <% end%>
  </div>
  <p class="mt-4"><%= link_to 'Googleの方はこちら', "/auth/google_oauth2", method: :post %></p>
</div>

