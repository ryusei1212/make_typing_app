<%= link_to '+新規作成', new_title_path, class: 'btn btn-primary mt-2' %>
<div class="row mt-2">
<% @title.each do |title|%>
  <div class="col-6 mb-4">
    <%= link_to title.title, types_path(title_id: title.id), controller: 'types', action: 'index' %>
    <%= link_to '編集', edit_title_path(title.id), class: 'btn btn-primary mr-3' %>
    <%= link_to '削除', title_path(title.id), method: :delete, data:{confirm: "「#{title.title}」を削除しますか？"}, class: 'btn btn-secondary' %>
  </div>
<% end %>
</div>
<div class="pagi_wrapper">
  <%= paginate @title %>
</div>


