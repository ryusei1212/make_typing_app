<div class="text-center login-form">
  <p class="mt-2 font-weight-bold">ログイン</p>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.email_field :email, class: 'form-control text-field', placeholder: "Eメールアドレス"%>

      <%= f.password_field :password, class: 'form-control text-field', placeholder: "パスワード"%>

      <%= f.label :remember_me do %>
      <%= f.check_box :remember_me, class: "form-checkbox" %>
      <span>ログインを記録する</span>
      <% end %>

      <%= f.submit "ログイン", class: 'btn btn-lg btn-primary form-control mt-2' %>
    <% end %>
</div>
<div class="row text-center">
    <p><%= link_to "アカウント作成", new_user_path %></p>
    <p><%= link_to "パスワードをリセット", new_password_reset_path %></p>
</div>
