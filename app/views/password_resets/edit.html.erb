<div class="text-center">
<p>パスワード再設定</p>
    <%=
    form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>

    <%= render 'shared/error_messages', model: @user %>

    <%= hidden_field_tag :email, @user.email %>

    <%= f.password_field :password, class: "form-control text-field", placeholder: "パスワード"%>

    <%= f.password_field :password_confirmation, class: "form-control text-field", placeholder: "パスワード (確認用)"%>

    <%= f.submit "パスワード更新", class: "btn btn-primary"%>
    <% end %>
</div>
